---
const { path, sponsorName, sponsorImg, sponsorDescription } = Astro.props;

interface Props {
	path: string;
	sponsorName: string;
	sponsorImg: string;
	sponsorDescription: string;
}


---


<div
class="group p-6 sm:p-8 rounded-3xl bg-white border border-gray-100 dark:shadow-none dark:border-gray-700 dark:bg-gray-800 bg-opacity-50 shadow-2xl shadow-gray-600/10"
>
	<a href={path}>
		<div class="h-20 w-full flex flex-col justify-center items-center">
			<img
				src={sponsorImg}
				alt={sponsorName}
				class="h-auto w-44"
			/>
		</div>
		<h3 class="text-center text-xl sm:text-2xl font-bold mt-4 dark:text-white">{sponsorName}</h3>
		<p class="text-center text-gray-600 dark:text-gray-400 mt-2">{sponsorDescription}</p>
	</a>
</div>